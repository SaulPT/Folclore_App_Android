<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/layout_ranchos"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingTop="76dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">
    >

    <Button
        android:text="Rancho 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rancho_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Rancho 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_rancho_x"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_rancho_xx" />

    <Button
        android:text="Rancho 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_rancho_xxx" />

</RelativeLayout>