<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Ranchos"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Escolher Grupo Folclore:"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/radioButtonAleatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Método Aleatório" />

        <RadioButton
            android:id="@+id/radioButtonDesignacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisa por Designação" />

        <RadioButton
            android:id="@+id/radioButtonAlfabetica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisa Alfabética" />

        <RadioButton
            android:id="@+id/radioButtonDistritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisa por Distritos" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonPesquisar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="Pesquisar" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>